<Window x:Class="MarmaladeApp.View.Windows.MarmaladeBoxInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarmaladeApp.View.Windows"
        mc:Ignorable="d"
        Title="MarmaladeBoxInfoWindow" Height="450" Width="350" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <local:MarmaladeInfoWindow x:Name="{Binding Marmalade}" x:Key="MarmaladeKey"/>
    </Window.Resources>
    <Border CornerRadius="30" Background="White" BorderBrush="Black" BorderThickness="3" Padding="10">
        <Grid x:Name="InfoGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.Row="0" CornerRadius="60" BorderBrush="Black" BorderThickness="1" Height="100" Width="100" Grid.ColumnSpan="3">
                <Border.Background>
                    <ImageBrush ImageSource="/Roaming/МармеладПингвины.jpg"/>
                </Border.Background>
            </Border>
            <TextBlock Text="{Binding Path=MarmaladeID1}" Background="Aqua" x:Name="MarmaladeName1TB" TextWrapping="Wrap" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2"/>
            <TextBlock Text="{Binding MarmaladeID2}" x:Name="MarmaladeName2TB" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            
            <TextBlock Text="{Binding MarmaladeID3}" x:Name="MarmaladeName3TB" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding MarmaladeID4}" x:Name="MarmaladeName4TB" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Cost}" x:Name="MarmaladeBoxCostTB" Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Gramm}" x:Name="MarmaladeGrammTB" Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Halal}" x:Name="MarmaladeHalalTB" Grid.Column="0" Grid.Row="14" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Compound}" x:Name="MarmaladeCompoundTB" Grid.Column="0" Grid.Row="16" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding EnergyValue100gKilojoleOrCalories}" x:Name="MarmaladeEnergyTB" Grid.Column="0" Grid.Row="18" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
            <Button Content="Закрыть" x:Name="CloseBtn" Click="CloseBtn_Click" Grid.Column="0" Width="100" Grid.Row="20" Grid.ColumnSpan="3"/>
        </Grid>
    </Border>
</Window>

