<Window x:Class="MarmaladeApp.View.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarmaladeApp.View.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="720" Width="1280" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="LoginTB" Grid.Row="0" Grid.Column="3"/>
        
        <TextBlock Text="Пароль" Grid.Row="2"/>
        <PasswordBox x:Name="PassPB" Grid.Row="2" Grid.Column="3"/>

        <CheckBox Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="4" Content="Запомнить аккаунт" x:Name="SaveAccChB"/>

        <Button Click="LoginBtn_Click" x:Name="LoginBtn" Grid.Row="6" Grid.ColumnSpan="3" Content="Войти"/>
        
        <Button Click="RegBtn_Click" x:Name="RegBtn" Grid.Row="8" Grid.ColumnSpan="3" Content="Регистрация"/>
        </Grid>

    </Grid>
</Window>
