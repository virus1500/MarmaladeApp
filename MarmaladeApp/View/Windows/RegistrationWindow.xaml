<Window x:Class="MarmaladeApp.View.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarmaladeApp.View.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="720" Width="1280">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="7" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="7" />
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" Grid.Row="1" Grid.Column="1"/>
        <TextBox x:Name="LoginTB" Grid.Row="1" Grid.Column="3"/>

        <TextBlock Text="Почта" Grid.Row="3" Grid.Column="1"/>
        <TextBox x:Name="EmailTB" Grid.Row="3" Grid.Column="3"/>

        <TextBlock Text="Телефон" Grid.Row="5" Grid.Column="1"/>
        <TextBox x:Name="PhoneTB" Grid.Row="5" Grid.Column="3"/>

        <TextBlock Text="Имя" Grid.Row="7" Grid.Column="1"/>
        <TextBox x:Name="NameTB" Grid.Row="7" Grid.Column="3"/>

        <TextBlock Text="Фамилия" Grid.Row="9" Grid.Column="1"/>
        <TextBox x:Name="SurenameTB" Grid.Row="9" Grid.Column="3"/>

        <TextBlock Text="Отчество" Grid.Row="11" Grid.Column="1"/>
        <TextBox x:Name="PatronymicTB" Grid.Row="11" Grid.Column="3"/>

        <TextBlock Text="Пароль" Grid.Row="13" Grid.Column="1"/>
        <PasswordBox x:Name="PassFstPB" Grid.Row="13" Grid.Column="3"/>

        <TextBlock Text="Повторите пароль" Grid.Row="15" Grid.Column="1"/>
        <PasswordBox x:Name="PassRepPB" Grid.Row="15" Grid.Column="3"/>

        <Button x:Name="EnterBtn" Click="EnterBtn_Click" Content="Войти" Grid.Column="1" Grid.Row="17" Grid.ColumnSpan="3" Width="300"/>
        </Grid>

    </Grid>
</Window>

