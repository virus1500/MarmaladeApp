<Page x:Class="MarmaladeApp.View.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarmaladeApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

        <ScrollViewer>
        <Grid Background="AliceBlue">
            
            <ItemsControl Name="InfoIC">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DataTemplate.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </DataTemplate.Resources>
                    <Grid>
                        <Border Padding="10" CornerRadius="20" BorderBrush="Black" BorderThickness="1">
                            <StackPanel>
                            <Button Content="{Binding Name}" Name="InfoBtn" Click="InfoBtn_Click"/>
                            <TextBlock Text="{Binding Cost}"/>
                            <TextBlock Text="{Binding Halal}"/>
                            <TextBlock Text="{Binding Supplier.Name}"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Compound}"/>
                        </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                
                <Style TargetType="ContentPresenter">

                    <Setter Property="Margin" Value="0,0,10,20"/>

                    <Setter Property="Width" Value="200"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <EventTrigger/>
                    </Style.Triggers>
                </Style>
        </ItemsControl>

    </Grid>
    </ScrollViewer>
</Page>


