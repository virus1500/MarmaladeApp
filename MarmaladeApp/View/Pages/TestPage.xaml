<Page x:Class="MarmaladeApp.View.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarmaladeApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

        <ScrollViewer>
        <Grid Background="AliceBlue">
            <ItemsControl Name="InfoIC">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="20"/>
                            </Style>
                        </DataTemplate.Resources>
                        <Grid>
                            <Border Padding="10" CornerRadius="20" BorderBrush="Black" BorderThickness="1" x:Name="InfoClick" MouseDown="InfoClick_MouseDown">

                                <StackPanel>
                                    <Border BorderThickness="3" CornerRadius="60" BorderBrush="Black"  Height="100" Width="100">
                                        <Border.Background>
                                            <ImageBrush ImageSource="C:\Users\user\source\repos\MarmaladeApp\MarmaladeApp\Roaming\МармеладПингвины.jpg"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Cost}"/>
                                    <TextBlock Text="{Binding Halal}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Margin" Value="0,0,10,20"/>
                        <Setter Property="Width" Value="200"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</Page>


